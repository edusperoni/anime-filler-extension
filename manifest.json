/*
- version always 2 because 1 unsuported since 2014.
- match ["https://mail.google.com/*", "http://mail.google.com/*"] for all gmail with http/ https
- 
*/

{
  "manifest_version": 2,
  "name": "Anime Filler Labeler",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.crunchyroll.com/*", "*://www.animefillerlist.com/shows/*"],
      "js": ["jquery-3.2.1.min.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}